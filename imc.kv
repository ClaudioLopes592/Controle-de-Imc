<TelaPrincipal>:
    FloatLayout:
        Label:
            text: "Controle de IMC"
            font_size: '20sp'
            size_hint: None, None
            pos_hint: {'center_x': 0.5,'center_y': 0.95}
        Label:
            text: "Desenvolvido por Claudio Lopes"
            font_size: '14sp'
            size_hint: None, None
            pos_hint: {'center_x': 0.5,'center_y': 0.88}
        TextInput:
            id: txt_peso
            hint_text: "Informe seu peso (ex.: 69.20)"
            size_hint: None, None
            pos_hint: {'center_x': 0.5,'center_y': 0.75}
            width: 220
            height: 40
        TextInput:
            id: txt_altura
            hint_text: "Informe sua altura (ex.: 1.70)"
            size_hint: None, None
            pos_hint: {'center_x': 0.5,'center_y': 0.65}
            width: 220
            height: 40
        Button:
            id: btn_calcular
            text: "CALCULAR IMC"
            font_size: '14sp'
            size: 200, 40
            size_hint: None, None
            pos_hint: {'center_x': 0.5,'center_y': 0.52}
            on_press: root.calcular_imc()
        Label:
            id: lbl_resultado
            text: "resultado"
            halign: 'center'
            font_size: '18sp'
            size_hint: None, None
            pos_hint: {'center_x': 0.5,'center_y': 0.35}